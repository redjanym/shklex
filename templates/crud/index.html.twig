{% extends "base.html.twig" %}
{% block page_header %}{{ model.name }}{% endblock %}
{% block page_header_description %}list of all {{ model.name }}{% endblock %}
{% block breadcrumb_active %}{{ model.name }}{% endblock %}
{% block body_title %}View the full list of {{ model.name }}{% endblock %}

{% block body_toolbox %}
    <div class="box-tools">
        <a href="{{ path('app_crud_create', {"modelId": model.id}) }}" class="btn btn-xs btn-primary">Create new {{ model.name }}</a>
    </div>
{% endblock %}

{% block body_content %}
    <table class="table">
        <thead>
            <tr>
                {% for field in fields %}
                    <th>{{ field.title }}</th>
                {% endfor %}
                <th></th>
            </tr>
        </thead>

        <tbody>
            {% for transactionId, value in values %}
                <tr>
                    {% for field in fields %}
                        <td>{{ value[field.id] }}</td>
                    {% endfor %}

                    <td>
                        <div class="btn-group">
                            <a href="{{ path('app_crud_update', {"modelId": model.id, "transactionId": transactionId}) }}" class="btn btn-xs btn-default">Edit</a>
                            <a href="{{ path('app_crud_delete', {"modelId": model.id, "transactionId": transactionId}) }}" class="btn btn-xs btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="{{ fields | length + 1 }}" class="text-center">No values available</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}